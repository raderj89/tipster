%h1 Get Started

= simple_form_for [@property, @property_employee] do |f|
  = f.fields_for :title do |t|
    = f.input :title, as: :hidden, input_html: { value: @employee.invitation_position }
  = f.simple_fields_for :employee, html: { multipart: true } do |e|
    = e.input :invitation_token, as: :hidden, input_html: { value: @employee.invitation_token }
    = e.input :first_name
    = e.input :last_name
    = e.input :nickname
    = e.input :email
    = e.input :password
    = e.input :password_confirmation
    = e.input :avatar, as: :file, label: 'Upload a photo of yourself'
  = f.submit "Create Account"