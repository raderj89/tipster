%h2 My Properties

%section.my-properties
  .all-properties-wrapper
    = render partial: 'property', collection: current_user.properties, locals: { user: current_user }

%section.my-payment
  %h2 My Payment Method
  .payment-information
    %p 
      Mastercard &ndash;3335
    = link_to "edit", '#', class: 'action-link right'

%section.my-tipping
  %h2 My Tipping History
  %table.dashboard-table
    %thead
      %tr
        %th Date
        %th Property
        %th Total
        %th
      %tbody
        = render partial: 'transaction', collection: current_user.transactions, locals: { user: current_user }
