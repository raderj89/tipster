%section.my-properties
  %h2 My Properties
  .all-properties-wrapper
    = render partial: 'property', collection: current_user.properties, locals: { user: current_user }
    .add-building-wrapper.clearfix
      = link_to '#', class: 'js-add-building' do
        %span.circle-wrap
          &#43;
        add a building
      #js-building-search
        = text_field_tag :query, nil, data: { autocomplete_source: properties_path }, id: 'js-property-search', placeholder: '555 Anywhere St, SomewheresVille, OK', class: 'full-input'
        #js-property-listings

%section.my-payment
  %h2 My Payment Method
  .payment-information
    %p 
      Mastercard &ndash;3335
    = link_to "edit", '#', class: 'action-link right'

%section.my-tipping
  %h2 My Tipping History
  %table.dashboard-table
    %thead
      %tr
        %th Date
        %th Property
        %th Total
        %th
      %tbody
        = render partial: 'transaction', collection: current_user.transactions, locals: { user: current_user }
